<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".UserActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Tangyuan.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/Theme.Tangyuan.PopupOverlay"
            app:title="@string/user_profile" />

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="20dp"
            android:paddingEnd="20dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="1">

                <ImageView
                    android:id="@+id/avatarView"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_columnWeight="0"
                    android:scaleType="centerCrop" />

                <GridLayout
                    android:layout_column="1"
                    android:layout_gravity="fill"
                    android:layout_marginStart="20dp"
                    android:columnCount="1"
                    android:rowCount="2">

                    <TextView
                        android:id="@+id/nicknameTextView"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_gravity="fill"
                        android:divider="@drawable/transparent_divider_horizontal_20dp"
                        android:orientation="horizontal"
                        android:showDividers="middle">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/regionButton"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:padding="0dp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="11sp"
                            app:icon="@drawable/icon_location"
                            app:iconGravity="textStart"
                            app:iconSize="13dp"
                            app:iconTint="@color/chain_gang_grey" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/mailButton"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:padding="0dp"
                            android:textAllCaps="false"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="11sp"
                            app:icon="@drawable/icon_mail"
                            app:iconGravity="textStart"
                            app:iconSize="13dp"
                            app:iconTint="@color/chain_gang_grey" />
                    </LinearLayout>
                </GridLayout>

            </GridLayout>

            <TextView
                android:id="@+id/bioTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" />

            <ProgressBar
                android:id="@+id/pgBarPostLoad"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:indeterminate="false" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/postList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>