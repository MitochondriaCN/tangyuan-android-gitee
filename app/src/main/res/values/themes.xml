<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tangyuan" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mazarine_blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/lynx_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/nanohanacha_gold</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/lynx_white</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/lynx_white</item>
        <item name="android:textColor">@color/electromagnetic</item>
        <item name="android:textColorSecondary">@color/chain_gang_grey</item>
    </style>

    <style name="Theme.Tangyuan.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Tangyuan.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="actionMenuTextColor">@color/electromagnetic</item>
        <item name="android:textColorSecondary">@color/electromagnetic</item>
        <item name="background">@color/lynx_white</item>
        <item name="colorControlNormal">@color/electromagnetic</item>
    </style>

    <style name="Theme.Tangyuan.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>